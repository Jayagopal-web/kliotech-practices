{
    "manifest_version": 3,
    "name": "Wallpaper Changer",
    "version": "1.0.0",
    "description": "Change Chrome wallpaper with a JSON file",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "browser_action": {
      "default_icon": "icon.png"
    }
}
